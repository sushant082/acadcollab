<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Profile</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      margin: 0;
    }

    main.profile-container {
      padding: 2em;
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
    }

    h1 {
      text-align: center;
    }

    .profile-card {
      background: #f9f9f9;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 2em;
      margin-top: 2em;
    }

    .profile-field {
      margin-bottom: 1.2em;
    }

    .profile-label {
      font-weight: bold;
      color: #555;
    }

    .profile-value {
      display: block;
      font-size: 1.2em;
      color: #222;
      margin-top: 0.25em;
    }

    .form-box {
      background: #fff;
      border: 1px solid #ddd;
      padding: 1em;
      margin-top: 2em;
      border-radius: 8px;
      text-align: left;
    }

    .form-box h2 {
      margin-top: 0;
    }

    label {
      display: block;
      margin: 0.5em 0 0.25em;
      font-weight: bold;
    }

    input[type="password"] {
      width: 100%;
      padding: 0.5em;
      margin-bottom: 1em;
    }

    button {
      padding: 0.5em 1em;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    .message {
      margin-top: 1em;
      font-weight: bold;
    }

    .message.success {
      color: green;
    }

    .message.error {
      color: red;
    }

    .back-button {
      display: block;
      margin: 2em auto 0;
      text-align: center;
      text-decoration: none;
      color: #0066cc;
    }

    .back-button:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <main class="profile-container">
    <h1>Your Profile</h1>

    <div class="profile-card">
      <div class="profile-field">
        <span class="profile-label">Username:</span>
        <span class="profile-value"><%= user.username %></span>
      </div>

      <% if (user.createdAt) { %>
        <div class="profile-field">
          <span class="profile-label">Account Created:</span>
          <span class="profile-value"><%= user.createdAt.toDateString() %></span>
        </div>
      <% } %>
    </div>

    <% if (success) { %>
      <div class="message success"><%= success %></div>
    <% } %>

    <% if (error) { %>
      <div class="message error"><%= error %></div>
    <% } %>

    <!-- Change Password -->
    <div class="form-box">
      <h2>Change Password</h2>
      <form action="/profile/change-password" method="POST">
        <label for="currentPassword">Current Password:</label>
        <input type="password" name="currentPassword" required>

        <label for="newPassword">New Password:</label>
        <input type="password" name="newPassword" required>

        <button type="submit">Update Password</button>
      </form>
    </div>

    <!-- Delete Account -->
    <!-- Delete Account -->
<div class="form-box" style="border-color: red;">
  <h2 style="color: red;">Delete Account</h2>
  <form id="deleteAccountForm" action="/profile/delete-account" method="POST">
    <label for="password">Confirm Password:</label>
    <input type="password" name="password" required>

    <button type="submit" style="background-color: red;">Delete My Account</button>
  </form>
</div>

<script>
  document.getElementById("deleteAccountForm").addEventListener("submit", function(event) {
    const confirmed = confirm("Are you sure you want to delete your account? This action cannot be undone.");
    if (!confirmed) {
      event.preventDefault();
    }
  });
</script>


    <a href="/" class="back-button">‚Üê Back to Home</a>
  </main>
</body>
</html>
